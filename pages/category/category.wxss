/* pages/category/category.wxss */
page {
  height: 100%;
}
.active {
  color: var(--themeColor);
  border-left: solid 10rpx currentColor;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .right_content {
  flex: 5;
}
.cates .cates_container .right_content .menu_content .content_title {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cates .cates_container .right_content .menu_content .content_title .text {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_content .menu_content .content_content {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_content .menu_content .content_content navigator {
  width: 33.33%;
  text-align: center;
}
.cates .cates_container .right_content .menu_content .content_content navigator image {
  width: 50%;
}
