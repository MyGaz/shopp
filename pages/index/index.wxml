<!--index.wxml-->
<!-- 搜索框开始 -->
<SerchInput></SerchInput>
<!-- 搜索框结束 -->
<!-- 轮播图开始 -->
<view class="index_swiper">
    <swiper autoplay="true" indicator-dots="true" indicator-color="#FF9900" indicator-active-color="#eb4450" interval="2000" circular="true">
        <swiper-item  wx:for="{{swiperList}}" wx:key="goods_id">
           <navigator url="/pages/goos_detail/goos_detail?goods_id={{item.goods_id}}">
            <image mode="widthFix" src="{{item.image_src}}"/>
           </navigator>
        </swiper-item>
    </swiper>
</view>
<!-- 轮播图结束 -->
<!-- 导航开始 -->
<view class="index_cate"> 
    <navigator url="{{item.navigator_url}}" open-type="switchTab" wx:for="{{catesList}}" wx:key="name">
    <image mode="widthFix" src="{{item.image_src}}" />
</navigator>
</view>
<!-- 导航结束 -->
<!-- 楼层开始 -->
<view class="index_Floor">
    <view class="floor_group" wx:for="{{floorList}}" wx:for-item="item1" wx:for-index="index1" wx:key="floor_title">
       <!-- 标题 -->
        <view class="floor_title">
            <image src="{{item1.floor_title.image_src}}" mode="widthFix"/>
        </view>
        <!-- 内容 -->
          <view class="product_list" >
              <navigator url="{{item2.navigator_url}}" wx:for="{{item1.product_list}}" wx:for-item="item2" wx:for-index="index2" wx:key="name">
              <image src="{{item2.image_src}}" mode="{{index2===0 ? 'widthFix':'scaleToFill'}}"/>
              </navigator>
          </view>
            
    </view>
      
</view>
<!-- 楼层结束 -->