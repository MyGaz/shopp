<view>
  <SerchInput></SerchInput>
  <Tabs tabs="{{tabs}}" bindtabCheckColor="tabCheckColor">
    <block wx:if="{{tabs[0].isActive}}">
     <view class="goods_list">
        <navigator url="../goos_detail/goos_detail?goods_id={{item.goods_id}}" class="goods_item" wx:for="{{goods_list}}" wx:key="goods_id">
        <view class="goods_Image">
          <image class="image" mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'../../icons/notShow.png'}}" />
        </view>
        <view class="goods_content">
          <view class="goods_name">{{item.goods_name}}</view>
          <view class="goods_price">ï¿¥{{item.goods_price}}</view>
        </view>
      </navigator>
     </view>
       
    </block>
    <block wx:if="{{tabs[1].isActive}}">1</block>
    <block wx:if="{{tabs[2].isActive}}">2</block>
  </Tabs>
</view>
