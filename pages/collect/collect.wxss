/* pages/collect/collect.wxss */
.goods_list .goods_item {
  display: flex;
}
.goods_list .goods_item .goods_Image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_list .goods_item .goods_Image .image {
  width: 70%;
}
.goods_list .goods_item .goods_content {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_list .goods_item .goods_content .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_list .goods_item .goods_content .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
